generator client {
  provider = "prisma-client"
 output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Status {
  TODO
  IN_PROGRESS
  COMPLETED
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(200)
  description String
  status      Status   @default(TODO)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
